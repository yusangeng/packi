{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "importHelpers": true,
    "noEmitHelpers": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "diagnostics": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "tslib": ["node_modules/tslib"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
